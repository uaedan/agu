### Template for GMT psxyz and/or psxy plots

####################
###  INVOCATION  ###
####################
# [ mGplt.tser.decm  CMSB.BK.Bf1..D.2004.338.230000.ms_decm10.rms.ascii

### INPUT FORMAT (file la):
#    X         Y        Z      Mp      EID
#  0.2882   -2.6211  -3.4410  0.17 87010511500
# -1.9463    5.5684 -11.6450  0.43 87010609000
# -3.1770    5.9068 -12.0820  0.00 87010609600


#######################
###  PRELIMINARIES  ###
#######################
# rm -f ...
#TITL=`echo "$1" |gawk '{split($0,a,"."); print a[1]"."a[2]"."a[3]}'`

inclERM="$1"
Ntrc="$2"
pLEN="$3"
SPSwfPLT="$4"
vlpFNblck="$5"
vlpFNgray="$6"
wfFNblck="$7"
wfFNgray="$8"

NtrcP1=`echo $Ntrc |gawk '{printf("%d",$1+1 )}'`

#######################
###   DEFINITIONS   ###
#######################
   X="1.50"       	# Plot origin shift (from 0) X. 
   Y="1.25"         	# Plot origin shift (from 0) Y. 
# JX="7.0/6.0"		# Plot size in inches.
  JX="4.0/-6.0"		# Plot size in inches.
#  R="0/24/-50/50500"    # Region of data.
#  R="0/24/0.0/10.0"    # Region of data.
   R="0/"$pLEN"/-1.5/"$NtrcP1""    # Region of data.
   B="a4f1:Minutes:/a10.f5.000:Relative Scaled Amplitude::.ENVELOPES\072  Consider/@;100;Reject:nsewSW"  # Boundry annottations.
   Bnorm="a4f1/a10.f5.000:.WAVEFORMS\072  Consider/@;100;Reject:nSew"  # Boundry annottations.
 Ba0="a0/a0"		# No Boundry annottation (frames plot).
   S="c"		# Symbol type and size info in third column.
  Ss="c.2"		# Symbol type with specified sizes.
   C="l.cpt"		# Color file for options like -C
Ggry="100"		# Symbol color fill, grey.
Gclr="150/125/0"		# Symbol color fill, (e.g. Gold).
  
#######################
### REFORMAT INPUT  ###
#######################
#cat "$1" |awk '{print $2,$3,$4}' > l.refrmt.$$
 ## Convert samples to hours
 ## 20 sps decimated by 10 == 2 sps --> 7200 smps/hour
 ## 20 sps decimated by 10 == 2 sps -->  600 smps/min.
 ## 20 sps no decimation   == 20 sps -->  1200 smps/min.
 ## 20 sps decimated by  2 == 10 sps -->  600 smps/min.
 ## 20 sps decimated by  4 ==  5 sps -->  300 smps/min.
 ## 20 sps decimated by  5 ==  4 sps -->  240 smps/min.
#vlps# blck
 gawk 'BEGIN{\
   i=0+0;\
 }{\
  if($0~/sss/){i=0+0; print $0; next};\
  i=i+1;\
  printf ("%f %s\n",(i/600),$1);\
  }' "$vlpFNblck" > l.refrmt.blck.$$
#vlps# gray
 gawk 'BEGIN{\
   i=0+0;\
 }{\
  if($0~/sss/){i=0+0; print $0; next};\
  i=i+1;\
  printf ("%f %s\n",(i/600),$1);\
  }' "$vlpFNgray" > l.refrmt.gray.$$

##ERM
# gawk 'BEGIN{\
#   i=0+0;\
# }{\
#   if($0~/sss/){j=i+0; i=0+0; next };\
#   i=i+1;\
#   lin[i]=sprintf("%f %s\n",(i/600),$1);\
# }END{\
#   for(k=1;k<=j;k++){\
#     print lin[k];\
#   }\
#   print "sss";\
#  }' "$vlpFN" > l.refrmt.ERM.$$

#wfs# blck
SMPpMIN=`echo "$SPSwfPLT 60." |gawk '{printf("%d",int($1*$2+0.5) )}'`
echo "SMPpMIN: $SMPpMIN"
 gawk 'BEGIN{\
   i=0+0;\
 }{\
  if($0~/sss/){i=0+0; print $0; next};\
  i=i+1;\
  printf ("%f %s\n",(i/("'"$SMPpMIN"'"+0.) ),$1);\
  }' "$wfFNblck" > l.refrmt.wfs.blck.$$
#wfs# gray
 gawk 'BEGIN{\
   i=0+0;\
 }{\
  if($0~/sss/){i=0+0; print $0; next};\
  i=i+1;\
  printf ("%f %s\n",(i/("'"$SMPpMIN"'"+0.) ),$1);\
  }' "$wfFNgray" > l.refrmt.wfs.gray.$$

#######################
### MODIFY DEFAULTS ###
#######################
# To see current gmtdefaults type in: [ gmtdefaults -L
 gmtset LABEL_FONT_SIZE 14 ANOT_FONT_SIZE 12 HEADER_FONT_SIZE 18
 gmtset MEASURE_UNIT  inch
 gmtset PAPER_MEDIA letter
 gmtset PAGE_ORIENTATION landscape
 
######################
### COLOR CPT file ###
######################
#echo "B 270 1 1.00" >l.cpt     ## Between blue and Magenta (Purple)
#echo "F 330 1 1.00" >>l.cpt    ## Between Red and Magenta
#echo "N 0 1.0 0.0" >>l.cpt     ## Black
####
#mGcpt.lin >>l.cpt
#mG.cpt.ss.pwr >>l.cpt      

###########################
####     PLOT DATA      ###
###########################
# psxy  l.refrmt.$$ -JX"$JX" -R"$R" -B"$B" -Sc -G150 \
  psxy  l.refrmt.blck.$$      -JX"$JX" -R"$R" -B"$B" -W3/000/000/000 \
 	-X"$X" -Y"$Y" -Ms -K      > myp."$TITL"
  psxy  l.refrmt.gray.$$      -JX"$JX" -R"$R" -B"$B" -W2/130 \
 	-X0    -Y0    -Ms -K -O  >> myp."$TITL"
if( test $inclERM == 'Y' )
then
echo "including ERM"
  psxy  l.refrmt.ERM.$$  -JX"$JX" -R"$R" -B"$B" -W5/000/000/000 \
     -X0    -Y0    -Ms -K -O  >> myp."$TITL"
fi
  psxy  l.refrmt.wfs.blck.$$ -JX"$JX" -R"$R" -B"$Bnorm" -W2/000/000/000 \
 	-X4.5    -Y0    -Ms  -K -O  >> myp."$TITL"
  psxy  l.refrmt.wfs.gray.$$ -JX"$JX" -R"$R" -B"$Bnorm" -W2/150 \
 	-X0      -Y0    -Ms     -O  >> myp."$TITL"

